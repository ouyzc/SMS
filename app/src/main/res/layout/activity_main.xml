<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/textView1"/>
    <Button
            android:text="写入文件"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button3"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="161dp"
            android:layout_marginTop="176dp" app:layout_constraintTop_toBottomOf="@+id/textView1"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="162dp"
            android:layout_marginBottom="132dp" app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="writeFile"/>

</androidx.constraintlayout.widget.ConstraintLayout>